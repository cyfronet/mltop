<%= turbo_frame_tag dom_id(entry, "hypothesis_form") do%>
  <% if hypothesis_id %>
    <% unless has_evaluations %>
      <%= button_to "Run Evaluations", hypothesis_evaluations_run_path(hypothesis_id:), class: "btn btn-success mb-2"%>
    <% end %>
    <%= button_to "Delete hypothesis", hypothesis_path(id: hypothesis_id), method: :delete, class: "btn btn-danger",
    form: { "data-turbo-confirm": "Are you sure you want to remove this hypothesis?" } %>
  <% else %>
    <%= render "/submissions/hypotheses/form", entry:, submission_id: %>
  <% end %>
<% end %>
