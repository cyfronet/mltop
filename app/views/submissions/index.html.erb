<% breadcrumb :submissions %>

<%= mltop_title "My submissions" %>

<% if policy(Model).new? %>
  <div class="border-b border-gray-200 pb-5 sm:flex sm:items-center sm:justify-end">
    <div class="mt-3 flex sm:ml-4 sm:mt-0">
      <%= link_to "New model", new_submission_path, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
<ul role="list" class="divide-y divide-gray-100 px-4">
  <%= render partial: "submission", collection: @models, as: :model %>
</ul>
