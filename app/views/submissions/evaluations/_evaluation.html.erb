<% cache_if evaluation.persisted?, evaluation do %>
  <li>
    <div class="px-4 py-4 sm:px-6">
      <div class="flex items-center justify-between">
        <div class="truncate text-sm font-medium text-indigo-600"><%= evaluation.evaluator.name %></div>
        <div class="ml-2 flex flex-shrink-0">
          <%= mltop_run_status(evaluation) %>
        </div>
      </div>
      <div class="mt-2 flex justify-left gap-x-2">
        <% evaluation.evaluator.metrics.each do |metric| %>
          <span class="inline-flex items-center rounded-lg bg-blue-50 px-2 py-1 text-xs font-medium text-blue-700 ring-1 ring-inset ring-blue-600/20">
            <%= metric.name %>: <%= evaluation.score_for_metric(metric).value || "-" %>
          </span>
        <% end %>
      </div>
    </div>
  </li>
<% end %>
