<nav class="bg-white" data-turbo-permanent>
  <div class="container mx-auto">
    <div class="flex h-16 justify-between">
      <div class="flex">
        <div class="flex flex-shrink-0 items-center">
          <%= link_to root_path do %>
            <%= image_tag "logo.webp", class: "h-8 w-auto", alt: "MLTop" %>
          <% end %>
        </div>
      </div>
      <div class="flex items-center">
        <div class="hidden md:ml-6 md:flex md:space-x-8">
          <%= mltop_navlinks do |links| %>
            <%- links.add "Dashboard", root_path, [[ "tasks", "tasks/leaderboards" ]] %>
            <%- links.add "Models", models_path, [ "models" ] %>
            <% if signed_in? %>
              <%- links.add "My submissions", submissions_path, /submissions\/.*/ %>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <% if signed_in? %>
            <%= button_to "Log out", sign_out_path, method: :delete, class: "relative inline-flex items-center gap-x-1.5 rounded-md bg-white px-3 py-2 text-sm font-semibold text-black border border-black hover:bg-black hover:text-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-black" %>
          <% else %>
            <%= link_to "Log in", sign_in_path, type:"button", class: "relative inline-flex items-center gap-x-1.5 rounded-md bg-white px-3 py-2 text-sm font-semibold text-black border border-black hover:bg-black hover:text-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-black" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</nav>

