<% content_for :head do %>
  <%= turbo_refreshes_with method: :morph, scroll: :preserve %>
<% end %>

<% breadcrumb :task_leaderboard, @task %>

<h1 class="mt-2 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl mb-8 text-center"><%= @task.name %> Leaderboard</h1>

<%= render "tasks/menu", task: @task %>

<% if @rows.size.positive? %>
  <%= render "leaderboard", task: @task, rows: @rows %>
<% else %>
  <%= render "layouts/empty", message: "No models selected for #{@task.name} task" %>
<% end %>
