<% content_for :head do %>
  <%= turbo_refreshes_with method: :morph, scroll: :preserve %>
<% end %>

<% breadcrumb :task_leaderboard, @task %>

<%= mltop_title "#{@task.name} Leaderboard" %>

<%= render "tasks/menu", task: @task %>

<% if @rows.size.positive? %>
  <%= render "leaderboard", task: @task, rows: @rows %>
<% else %>
  <%= render "layouts/empty", message: "Raking list will be released after challange submittion deadline." %>
<% end %>
