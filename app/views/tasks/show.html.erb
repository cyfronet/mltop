<% content_for :head do %>
  <%= turbo_refreshes_with method: :morph, scroll: :preserve %>
<% end %>

<% breadcrumb :task, @task %>

<%= mltop_title @task.name %>

<%= render "menu", task: @task %>

<%= @task.description %>

<% @task_test_sets.each do |task_test_set| %>
  <h2 class="mt-2 text-2xl font-bold tracking-tight sm:text-4xl mb-8 mt-8 text-center">
    <%= link_to "#{task_test_set.test_set.name} test set", test_set_path(task_test_set.test_set) %>
  </h2>

  <%= render "test_sets/show", test_set: task_test_set.test_set, task_test_sets: [task_test_set] %>
<% end %>



