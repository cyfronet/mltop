<% breadcrumb :admin_task, @task %>

<div>
  <div class="px-4 sm:px-0">
    <div class="sm:flex sm:items-start sm:justify-between">
      <div>
        <h3 class="text-base font-semibold leading-7"><%= @task%></h3>
        <div class="mt-2 max-w-xl text-sm text-gray-500">
          <p class="mt-1 text-sm leading-6 text-gray-500"><%= @task.info %></p>
        </div>
      </div>
      <div class="mt-5 sm:ml-6 sm:mt-0 sm:flex sm:flex-shrink-0 sm:items-center space-x-2">
        <%= link_to [:edit, :admin, @task], type:"button", class: "btn btn-secondary-outline" do %>
            <%= edit_icon("ml-0.5 mr-1.5 h-5 w-5") %>
          <span> Edit </span>
        <% end %>
        <%= button_to [:admin, @task], method: :delete, class: "btn btn-danger",
          form: { "data-turbo-confirm": "Are you sure you want to remove this task? All related elements (groundtruths, evalutions, scores) will be removed as well" } do %>
          <%= trash_icon("ml-0.5 mr-1.5 h-5 w-5") %>
          <span> Delete </span>
        <% end %>
      </div>
    </div>
  </div>
  <div class="mt-6 border-t border-gray-100">
    <dl class="divide-y divide-gray-100">
      <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
        <dt class="text-sm font-medium leading-6">Description</dt>
        <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= @task.description %></dd>
      </div>
      <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
        <dt class="text-sm font-medium leading-6">From</dt>
        <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= @task.from %></dd>
      </div>
      <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
        <dt class="text-sm font-medium leading-6">To</dt>
        <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= @task.to %></dd>
      </div>
      <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
        <dt class="text-sm font-medium leading-6">Test sets</dt>
        <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
          <%= @task.test_sets
                .map { |ts| "#{ts.name}#{"(invisible)" unless ts.published}" }
                .join(", ")
          %>
        </dd>
      </div>
      <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
        <dt class="text-sm font-medium leading-6">Evaluators</dt>
        <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= @task.evaluators.map(&:name).join(", ") %></dd>
      </div>
      <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
        <dt class="text-sm font-medium leading-6">Metrics</dt>
        <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= @task.metrics.map(&:name).join(", ") %></dd>
      </div>
    </dl>
  </div>
</div>
