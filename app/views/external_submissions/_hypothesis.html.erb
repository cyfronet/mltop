<% cache hypothesis do %>
  <div id="<%= dom_id(hypothesis, "external-submission") %>" class="mx-3 my-4 bg-white sm:rounded-lg sm:shadow">
    <div class="border-b border-gray-200 bg-white px-4 py-5 sm:px-6">
      <div class="-ml-4 -mt-2 flex flex-wrap items-center justify-between sm:flex-nowrap">
        <div class="ml-4 mt-2">
          <h3 class="text-base font-semibold"><%= hypothesis.test_set_entry.task.slug %>: <%= hypothesis.test_set_entry %></h3>
        </div>
        <div class="ml-4 mt-4 flex shrink-0">
          <%= link_to hypothesis.test_set_entry.input, class: "relative inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 mr-3", "data-turbo-prefetch": false do %>
            <%= download_icon("ml-0.5 mr-1.5 h-5 w-5 text-blue-600") %>
            <span>Test input</span>
          <% end %>
          <%= link_to hypothesis.input, class: "relative inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 mr-3", "data-turbo-prefetch": false do %>
            <%= download_icon("ml-0.5 mr-1.5 h-5 w-5 text-blue-600") %>
            <span>Hypothesis</span>
          <% end %>
          <%= button_to hypothesis_evaluations_path(hypothesis), class: "relative inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 mr-3" do %>
            <%= run_icon("ml-0.5 mr-1.5 h-5 w-5 text-green-600") %>
            <span>Evaluate</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
