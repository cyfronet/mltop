<%# locals: (challenge:) %>
<li class="flex flex-wrap items-center justify-between sm:flex-nowrap border rounded-lg p-4">
  <div class="w-1/3">
    <p class="text-sm font-semibold leading-6">
      <%= link_to challenge.name, challenge_path(challenge), class: "hover:underline" %>
    </p>
    <div class="mt-1 flex items-center leading-5 text-gray-500">
      <p><%= challenge.description %> </p>
    </div>
  </div>
  <div class="flex flex-row w-1/3 gap-6">
    <div>
      <%= mltop_status(challenge) %>
    </div>
    <span class="flex gap-x-1 sm:w-auto">
      <%= I18n.l(challenge.starts_at, format: "%a, %d %b %y") %> - <%= I18n.l(challenge.ends_at, format: "%a, %d %b %y")  %>
    </span>
  </div>
  <div data-controller="dropdown" class="relative">
    <button
      data-action="click->dropdown#toggle"
      type="button"
      class="py-2"
      aria-expanded="false">
      <%= hamburger_icon("dark:text-white") %>
    </button>
    <div
      data-dropdown-target="menu"
      class="hidden bg-white absolute z-50 top-full right-0 rounded-lg border border-gray-300 dark:text-gray-900">
      <div class="py-4 gap-4 px-2">
        <div class="relative flex hover:bg-fuchsia-600 hover:text-white rounded-md">
          <div>
            <%= link_to challenge, class: "relative inline-flex items-center px-3 py-2 text-sm mr-3", "data-turbo-prefetch": false do %>
              <%= queue_list_icon("ml-0.5 mr-1.5 h-5 w-5") %>
              <span>Details</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</li>
