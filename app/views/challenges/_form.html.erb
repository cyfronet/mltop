<%# locals: (challenge:, url:) %>
<%= form_with(model: challenge, url:, class: "contents", data: { controller: "toggler", toggler_toggle_class: "hidden" }) do |form| %>
  <div class="space-y-12">
    <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
      <div class= "col-span-full">
        <%= form.label :logo %>
        <%= form.check_box :use_default_logo, { checked: challenge.logo.blank?, data: { action: "click->toggler#toggle" } }, "1", "0"%>
        <% if challenge.logo.present? %>
          <%= image_tag challenge.logo.variant(resize_to_limit: [300, 300]), data: { toggler_target: :toggle } %>
        <% end %>
        <%= form.file_field :logo, accept: "image/*", class: challenge.logo.blank? ? "hidden" : "" ,data: { toggler_target: :toggle } %>
      </div>
      <%= form.text_field :name, wrapper: "sm:col-span-4" %>
      <%= form.rich_text_area :description, wrapper: "col-span-full" %>
      <%= form.date_field :starts_at, wrapper: "sm:col-span-1" %>
      <%= form.date_field :ends_at, wrapper: "sm:col-span-1" %>
      <%= form.select :visibility, Challenge.visibilities.keys.map { |key| [key.humanize, key]}, include_blank: true, wrapper: "sm:col-span-1" %>
    </div>
  </div>
  <div class="mt-6 mb-2 flex items-center justify-end gap-x-6">
    <%= link_to "Cancel", challenges_path, class: "btn btn-secondary-outline" %>
    <%= form.submit %>
  </div>
<% end %>
