<% breadcrumb :dashboard %>
<div class="w-full flex flex-col gap-10">
  <% if Current.challenge %>
    <%= render "layouts/challenge_status_banner"%>
    <div class="flex flex-col gap-10">
      <h2 class="font-semibold text-5xl text-center">
        <%= Current.challenge.name %>
      </h2>
      <div class="ms-14">
        <%= Current.challenge.description%>
      </div>
    </div>
  <% end %>
  <div class="flex ms-14 space-x-10">
    <div class="w-1/2 flex flex-col gap-10 mt-5 text-justify">
      <%= Current.challenge.introduction %>
      <div>
        <% if !signed_in? %>
          <%= link_to "Join us", sign_in_path, class: "btn btn-primary", "data-turbo-prefetch": false %>
        <% end %>
        <% if signed_in? && !challenge_participant? %>
          <%= link_to "Join challenge", new_membership_path, class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
    <div class="w-1/2 border-y rounded-s-xl py-4 ps-4 bg-zinc-50">
      <%= image_tag("home_page_section1.png", class: "grayscale")%>
    </div>
  </div>
  <div class="bg-home-img bg-cover bg-left">
    <div class="bg-linear-to-r from-transparent to-black to-60% flex">
      <div class="w-1/2">
      </div>
      <div class="w-1/2 m-5 text-white">
        <h1 class="font-bold text-2xl text-justify">
          Unlock the Future of Speech Technology
        </h1>
        <h2 class="mt-5 text-justify">
          Explore our innovative AI solutions that empower seamless communication and drive progress in the field of speech technology.
        </h2>
        <div class="flex divide-x">
          <div></div>
          <div class="w-1/3 pl-5">
            <p class="text-orange-500 text-2xl font-bold"><%= @stats.models %></p>
            <p> models </p>
          </div>
          <div class="w-1/3 pl-5">
            <p class="text-orange-500 text-2xl font-bold"><%= @stats.test_sets %></p>
            <p> test sets </p>
          </div>
          <div class="w-1/3 pl-5">
            <p class="text-orange-500 text-2xl font-bold"><%= @stats.metrics %></p>
            <p> metrics </p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="flex flex-col gap-5">
    <h2 class="mx-14 bg-linear-to-r from-orange-500 to-fuchsia-600 text-transparent bg-clip-text text-center font-bold text-2xl">
      Key Tasks in NLP and Speech Technology
    </h2>
    <h3 class="mx-14 mt-5 text-center">
      Explore the core functions that enhance communication through language
      understanding, translation, and speech recognition.
    </h3>
  </div>
  <div id="tasks" class="min-w-full">
    <ul role="list" class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
      <%= render @tasks %>
    </ul>
  </div>
  <div class="mt-4 flex bg-linear-to-r from-fuchsia-100 to-orange-50 pt-10 space-x-10">
    <div class="w-1/2">
      <%= image_tag("home_page_section3.png", class: "grayscale") %>
    </div>
    <div class="w-1/2 p-4 text-zinc-700 text-justify">
      <%= Current.challenge.call_to_action %>
    </div>
  </div>
</div>
