<%# locals: (evaluator:, sites:) %>
<%= form_with(model: evaluator, url: [:dashboard, evaluator], class: "contents") do |form| %>
  <div class="space-y-12">
    <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
      <%= form.text_field :name, wrapper: "sm:col-span-2" %>
      <%= form.select :site_id, @sites.map { |site| [site.name, site.id]}, include_blank: false, wrapper: "sm:col-span-2" %>
      <%= form.select :from, Task::TYPES, include_blank: true, wrapper: "sm:col-span-2" %>
      <%= form.select :to, Task::TYPES, include_blank: true, wrapper: "sm:col-span-2" %>
      <%= form.text_area :script, wrapper: "sm:col-span-4", class: "h-96" %>
    </div>
  </div>
  <div class="mt-6 flex items-center justify-end gap-x-6 mb-2">
    <%= link_to "Cancel", [:dashboard, evaluator], class: "btn btn-secondary-outline" %>
    <%= form.submit %>
  </div>
<% end %>
