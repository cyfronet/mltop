<%# locals: (consent:) %>

<li class="flex flex-wrap items-center justify-between gap-x-6 gap-y-4 py-5 sm:flex-nowrap">
  <div>
    <p class="text-sm font-semibold leading-6">
      <%= link_to consent.name, edit_dashboard_consent_path(consent), class: "hover:underline" %>
    </p>
    <div class="mt-1 flex items-center gap-x-2 text-xs leading-5 text-gray-500">
      <p>created at: <time datetime="<%= consent.created_at %>"><%= time_ago_in_words consent.created_at %> ago</time></p>
      <%= dot %>
      <p>updated at:<time datetime="<%= consent.updated_at %>"><%= time_ago_in_words consent.updated_at %> ago</time></p>
    </div>
  </div>
  <dl class="flex w-full flex-none justify-between gap-x-8 sm:w-auto">
    <%= button_to dashboard_consent_path(consent), class: "btn btn-danger", method: :delete,
        form: { "data-turbo-confirm": "Are you sure you want to remove this consent?",
                "data-turbo-frame": "_top" } do %>
      <%= trash_icon("ml-0.5 mr-1.5 h-5 w-5") %>
      <span> Delete </span>
    <% end %>
  </dl>
</li>
