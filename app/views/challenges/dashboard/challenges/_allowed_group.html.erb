<%# locals: (allowed_group:) %>
<%= turbo_frame_tag allowed_group do %>
  <div class="sm:flex sm:items-start sm:justify-between">
    <span><%= allowed_group.group_name %></span>
    <div class="mt-5 sm:ml-6 sm:mt-0 sm:flex sm:shrink-0 sm:items-center space-x-2">
      <%= link_to edit_dashboard_allowed_group_path(allowed_group), class: "btn btn-secondary-outline" do %>
        <%= edit_icon("ml-0.5 mr-1.5 h-5 w-5") %>
        <span> Edit </span>
      <% end %>
      <%= button_to dashboard_allowed_group_path(allowed_group), class: "btn btn-danger", method: :delete,
          form: { "data-turbo-confirm": "Are you sure you want to remove \"#{allowed_group.group_name}\" allowed_group?",
                  "data-turbo-frame": "_top" } do %>
        <%= trash_icon("ml-0.5 mr-1.5 h-5 w-5") %>
        <span> Delete </span>
      <% end %>
    </div>
  </div>
<% end %>
<div class="relative py-3">
  <div class="absolute inset-0 flex items-center" aria-hidden="true">
    <div class="w-full border-t border-gray-300"></div>
  </div>
</div>
