<%# locals: (allowed_group:, url: [:dashboard, allowed_group]) %>
<%= form_with(model: allowed_group, url:, class: "contents") do |form| %>
  <div class="space-y-12">
    <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
      <%= form.text_field :group_name, wrapper: "sm:col-span-4" %>
      <%= form.select :roles, AllowedGroup.valid_roles, wrapper: "sm:col-span-4" %>
    </div>
  </div>
  <div class="mt-6 flex items-center justify-end gap-x-6">
    <%= link_to "Cancel", :back, class: "btn btn-secondary-outline" %>
    <%= form.submit %>
  </div>
<% end %>
