<%# locals: (task:) %>

<li class="flex flex-wrap items-center justify-between gap-x-6 gap-y-4 py-5 sm:flex-nowrap">
  <div>
    <p class="text-sm font-semibold leading-6">
      <%= link_to task, [:dashboard, task], class: "hover:unerline" %>
    </p>
    <div class="mt-1 flex items-center gap-x-2 text-xs leading-5 text-gray-500">
      <p>created at: <time datetime="<%= task.created_at %>"><%= time_ago_in_words task.created_at %> ago</time></p>
      <%= dot %>
      <p>updated at:<time datetime="<%= task.updated_at %>"><%= time_ago_in_words task.updated_at %> ago</time></p>
      <%= dot %>
      <p>Challenge: <%= task.challenge&.name %></p>
    </div>
  </div>
  <dl class="flex w-full flex-none justify-between gap-x-8 sm:w-auto">
    <!-- Placeholder for actions? -->
  </dl>
</li>
