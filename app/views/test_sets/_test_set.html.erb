<%# locals: (test_set:) %>

<li class="border-2 rounded-md mt-5">
  <div class="flex flex-wrap items-center justify-between mx-3 px-3 gap-x-6 gap-y-4 py-5 sm:flex-nowrap">
    <div>
      <p class="text-sm font-semibold leading-6 text-zinc-700">
        <%= link_to test_set.name, test_set, class: "hover:unerline" %>
      </p>
      <div class="mt-1 flex items-center gap-x-2 text-xs leading-5 text-gray-500">
        <p>Created <time class="font-bold" datetime="<%= test_set.created_at %>"><%= time_ago_in_words test_set.created_at %> ago</time></p>
      </div>
    </div>
    <dl class="flex w-full flex-none justify-between gap-x-8 sm:w-auto text-sm font-semibold">
      Score
    </dl>

  </div>
  <hr>
  <div class="p-2 mb-4">
    <div class="my-1 flex items-center gap-x-2 text-xs leading-5 text-gray-500">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
      <path d="M12.232 4.232a2.5 2.5 0 0 1 3.536 3.536l-1.225 1.224a.75.75 0 0 0 1.061 1.06l1.224-1.224a4 4 0 0 0-5.656-5.656l-3 3a4 4 0 0 0 .225 5.865.75.75 0 0 0 .977-1.138 2.5 2.5 0 0 1-.142-3.667l3-3Z" />
      <path d="M11.603 7.963a.75.75 0 0 0-.977 1.138 2.5 2.5 0 0 1 .142 3.667l-3 3a2.5 2.5 0 0 1-3.536-3.536l1.225-1.224a.75.75 0 0 0-1.061-1.06l-1.224 1.224a4 4 0 1 0 5.656 5.656l3-3a4 4 0 0 0-.225-5.865Z" />
    </svg>
      <% test_set.tasks.map do |task|%>
        <%= link_to task.name, task_path(task), type:"button", class: "btn font-medium text-zinc-700 border-zinc-200 bg-zinc-50" %>
      <% end %>
    </div>
  </div>
</li>
